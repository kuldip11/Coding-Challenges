import java.util.*;
import java.lang.*;
import java.io.*;
 
/* Name of the class has to be "Main" only if the class is public. */
public class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
		Scanner sc=new Scanner(System.in);
		int t= sc.nextInt();
while(t-->0){
int a= sc.nextInt();
int b=sc.nextInt();
int n=sc.nextInt();
int count=0;
int val=0;
 while(true)
    {
        val = Math.min(a,b);
        if(val == a)
        {
            a+=b;
            count++;
            if(a>n) break;
        }
        else{
           b+=a;
           count++;
           if(b>n) break;
        }
    }
    System.out.println(count);}}}
